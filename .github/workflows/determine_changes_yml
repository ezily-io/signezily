name: Determine Changes on Docuemnso Apps to build

on:
  workflow_call:
    inputs:
      documenso-web-path:
        description: Path for Documenso web
        required: true
        type: string
      documenso-marketing-path:
        description: Path for Documenso Marketing site
        required: true
        type: string
      documenso-docs-path:
        description: Path for Documenso Documentation site
        required: true
        type: string

jobs:
  detect-changes:
    runs-on: ubuntu-latest
    outputs:
      web_changed: ${{ steps.web_check.outputs.changed }}
      marketing_changed: ${{ steps.marketing_check.outputs.changed }}
      documentation_changed: ${{ steps.documentation_check.outputs.changed }}
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Determine if web site has changed
        id: web_check
        run: |
          if git diff --name-only ${{ github.event.before }} ${{ github.sha }} | grep -q "^${{ inputs.documenso-web-path }}/"; then
            echo "changed=true" >> $GITHUB_ENV
          else
            echo "changed=false" >> $GITHUB_ENV
          fi
        shell: bash
        env:
          changed: ''

      - name: Determine if marketing site has changed
        id: marketing_check
        run: |
          if git diff --name-only ${{ github.event.before }} ${{ github.sha }} | grep -q "^${{ inputs.documenso-marketing-path }}/"; then
            echo "changed=true" >> $GITHUB_ENV
          else
            echo "changed=false" >> $GITHUB_ENV
          fi
        shell: bash
        env:
          changed: ''

      - name: Determine if docuementation site has changed
        id: documentation_check
        run: |
          if git diff --name-only ${{ github.event.before }} ${{ github.sha }} | grep -q "^${{ inputs.documenso-docs-path }}/"; then
            echo "changed=true" >> $GITHUB_ENV
          else
            echo "changed=false" >> $GITHUB_ENV
          fi
        shell: bash
        env:
          changed: ''